<?xml version="1.0" encoding="utf-8"?>
<odoo>



    <data>

        <record id="action_done_tickets" model="ir.actions.act_window">
            <field name="name">Closed Tickets</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">maintenance.customers</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_state':'done'}</field>
            <field name="domain">[('state','=','done')]</field>

        </record>

        <menuitem id="menu_done_tickets"
                  name="Closed Tickets"
                  parent="menu_ticket_details"
                  action="action_done_tickets"
                  sequence="40"/>

    </data>

</odoo>