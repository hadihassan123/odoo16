<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="email_template_revised_prices" model="mail.template">
            <field name="name">Purchase Order Price Revision Notification</field>
            <field name="email_from">{{user.email_formatted}}</field>
            <field name="email_to">{{object.user_id.email_formatted}}</field>
            <field name="subject">Price Revisions in Purchase Order {{object.name}}</field>
            <field name="model_id" ref="rfq_management.model_purchase_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">${object.user_id.lang}</field>
            <field name="body_html" type="html">
                <div>
                    Dear <t t-out="object.user_id.name"></t>,
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">This is to inform you that the prices of some
                        products in the purchase order <t t-out="object.name"></t> have been revised.
                    </p>
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">Please find the details of the revised prices
                        below:
                    </p>
                    <table style="box-sizing:border-box;caption-side:bottom;border-collapse: collapse; width: 100%;"
                           width="100%">
                        <tbody style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:0px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:inherit;border-right-color:inherit;border-top-color:inherit;">
                            <tr style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:0px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:inherit;border-right-color:inherit;border-top-color:inherit;background-color: #f2f2f2;">
                                <th style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;font-weight:500;padding: 8px; text-align: left; border-bottom: 1px solid #ddd;">
                                    Product
                                </th>
                                <th style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;font-weight:500;padding: 8px; text-align: left; border-bottom: 1px solid #ddd;">
                                    Internal Reference
                                </th>
                                <th style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;font-weight:500;padding: 8px; text-align: left; border-bottom: 1px solid #ddd;">
                                    Old Price
                                </th>
                                <th style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;font-weight:500;padding: 8px; text-align: left; border-bottom: 1px solid #ddd;">
                                    Revised Price
                                </th>
                            </tr>
                            <t t-foreach="object.product_summary_lines" t-as="line">
                                <tr style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:0px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:inherit;border-right-color:inherit;border-top-color:inherit;">
                                    <td style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;padding: 8px; border-bottom: 1px solid #ddd;">
                                        <t t-out="line.product_id.name"></t>
                                    </td>
                                    <td style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;padding: 8px; border-bottom: 1px solid #ddd;">
                                        <t t-out="line.product_id.default_code"></t>
                                    </td>
                                    <td style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;padding: 8px; border-bottom: 1px solid #ddd;">
                                        <t t-out="line.unit_price"></t>
                                    </td>
                                    <td style="border-style:solid;box-sizing:border-box;border-left-width:0px;border-bottom-width:1px;border-right-width:0px;border-top-width:0px;border-left-color:inherit;border-bottom-color:#dddddd;border-right-color:inherit;border-top-color:inherit;padding: 8px; border-bottom: 1px solid #ddd;">
                                        <t t-out="line.revised_unit_price"></t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">Please review the revised prices and take
                        appropriate actions.
                    </p>
                    <p style="margin:0px 0 12px 0;box-sizing:border-box;">Thank you.</p>
                </div>
            </field>
            <field name="model" ref="purchase.model_purchase_order"/>
        </record>
    </data>
</odoo>